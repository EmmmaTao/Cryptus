<h1> Posts </h1>

<p><%= link_to 'Create a Post', new_post_path, class: 'btn btn-primary btn-large' %></p>

<% @posts.each do |post| %>
  <div class="well well-lg">
    <!-- <h2><%= link_to post.content, post_path(post) %></h2> -->
    <p>Title: <%= post.content%> </p>
    <% if post.btc %>
    	<p>Type: Bitcoin</p>
    <% else %>
    	<p>Type: Ethereum</p>
    	<% end %>
    <p>Quantity: <%= post.quantity %></p>
    <p>Price: <%= post.price %></p>


    <div class="btn-group">
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info' %>
      <%= link_to 'Delete', post_path(post), data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>