<div class="row text-center">
  <h2>Market Stats</h2>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center"><%= @bname %></th>
        <th class="text-center"><%= @ename %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Market Cap: $<%= @bmarketcap %></td>
        <td>Market Cap: $<%= @emarketcap %></td>
      </tr>
      <tr>
        <td>24 HR Volume: $<%= @bvolume %></td>
        <td>24 HR Volume: $<%= @evolume %></td>
      </tr>
      <tr>
        <td>Price: $<%= @bprice %></td>
        <td>Price: $<%= @eprice %></td>
      </tr>
    </tbody>
  </table>
